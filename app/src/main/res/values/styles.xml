<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkCyan</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlHighlight">@color/orange</item>
        <item name="colorControlNormal">@color/orange</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/lightBlue</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CyanButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/cyan_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="OrangeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/darkOrange</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="DarkBlueButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/dark_blue_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="BackButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/blue_flat_button</item>
        <item name="android:src">@drawable/back_arrow</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="YearSpinner" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="RentSpinner" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
