<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="buthod.tony.rentingmanager.MainActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Toolbar">

        <ImageButton
            android:id="@+id/back_button"
            style="@style/BackButton"/>

        <Spinner
            android:id="@+id/list_subrents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:theme="@style/RentSpinner">
        </Spinner>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/caldroid_container"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/caldroid_container">

        <Button
            android:id="@+id/add_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            style="@style/CyanButton"/>

        <Button
            android:id="@+id/remove_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove"
            style="@style/CyanButton"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prices"
            style="@style/CyanButton"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tenants_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttons_layout"
        android:textColor="@android:color/black"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/tenants"/>

    <TextView
        android:id="@+id/tenants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkBlue"
        android:layout_below="@id/tenants_label"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>

</RelativeLayout>
